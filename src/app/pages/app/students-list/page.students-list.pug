.students-list-page(fxLayout="row" fxLayoutWrap fxLayoutGap="0.5%" fxLayoutAlign="center")
    table(mat-table, [dataSource]="dataStudents", class="mat-elevation-z8")

        ng-container(matColumnDef="position")
            th(mat-header-cell, *matHeaderCellDef) No.
            td(mat-cell, *matCellDef="let element; let i = index;") {{i + 1}}

        ng-container(matColumnDef="username")
            th(mat-header-cell, *matHeaderCellDef) Username
            td(mat-cell, *matCellDef="let element") {{element.username}}

        ng-container(matColumnDef="create")
            th(mat-header-cell, *matHeaderCellDef) create
            td(mat-cell, *matCellDef="let row")
                button(mat-button, (click)="create(row)") Create

        ng-container(matColumnDef="remove")
            th(mat-header-cell, *matHeaderCellDef) remove
            td(mat-cell, *matCellDef="let row")
                button(mat-button, (click)="remove(row)") Remove

        tr(mat-header-row, *matHeaderRowDef="displayedColumns")
        tr(mat-row, *matRowDef="let row; columns: displayedColumns;let i = index")

